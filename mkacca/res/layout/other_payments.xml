<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/tooltip_margin"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Предв. оплата" android:layout_marginEnd="6dp"/>
    <cs.cashier.ui.widgets.NumberEdit android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="end" android:id="@+id/e_ahead"/>
</TableRow>    
<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Кредит" android:layout_marginEnd="6dp"/>
    <cs.cashier.ui.widgets.NumberEdit android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="end" android:id="@+id/e_credit"/>
</TableRow>    
<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Встречная" android:layout_marginEnd="6dp"/>
    <cs.cashier.ui.widgets.NumberEdit android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="end" android:id="@+id/e_barter"/>
</TableRow>    

</TableLayout>
