<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:labelFor="@+id/ed_mid"
            android:text="Идентификатор Продавца" />

        <EditText
            android:id="@+id/ed_mid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:inputType="text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:labelFor="@+id/ed_spb_url"
            android:text="URL запроса" />

        <EditText
            android:id="@+id/ed_spb_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textUri" />
    </TableRow>

    <CheckBox
        android:layout_marginStart="14dp"
        android:id="@+id/cb_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тестовый клиент" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:labelFor="@+id/ed_spb_psk"
            android:text="Пароль тестового терминала" />

        <EditText
            android:id="@+id/ed_spb_psk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textUri" />
    </TableRow>

</TableLayout>