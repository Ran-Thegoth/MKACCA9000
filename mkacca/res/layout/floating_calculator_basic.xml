<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <ir.esfandune.calculatorlibe.SolidPadLayout
        style="@style/PadLayoutStyle.Numeric"
        android:columnCount="3"

        android:rowCount="5">





        <!--     <Button
             android:id="@+id/digit_"
             style="@style/PadButtonStyle.FloatingCalc"
             android:text=""
             android:textColor="@color/calculator_button_color" />

     <ImageView
             android:id="@+id/clr"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:adjustViewBounds="true"
             android:padding="15dp"
             android:src="@drawable/ic_c_rmv_char" />-->


        <Button
            android:id="@+id/digit_7"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="7" />

        <Button
            android:id="@+id/digit_8"
            style="@style/PadButtonStyle.FloatingCalc"

            android:text="8" />

        <Button
            android:id="@+id/digit_9"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="9" />

        <Button
            android:id="@+id/digit_4"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="4" />

        <Button
            android:id="@+id/digit_5"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="5" />

        <Button
            android:id="@+id/digit_6"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="6" />

        <Button
            android:id="@+id/digit_1"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="1" />

        <Button
            android:id="@+id/digit_2"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="2" />

        <Button
            android:id="@+id/digit_3"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="3" />

        <Button
            android:id="@+id/dlteAll"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="@string/C"
            android:textColor="@color/calculator_button_color" />

        <Button
            android:id="@+id/dot"
            style="@style/PadButtonStyle.FloatingCalc"
            android:textColor="@color/calculator_button_color"
            android:text="." />
        <Button
            android:id="@+id/eq"
            style="@style/PadButtonStyle.FloatingCalc"
            android:contentDescription=""
            android:text="@string/eq" />

        <Button
            android:id="@+id/digit_0"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="0" />

        <Button
            android:id="@+id/digit_00"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="00" />
        <Button
            android:id="@+id/digit_000"
            style="@style/PadButtonStyle.FloatingCalc"
            android:text="000" />

    </ir.esfandune.calculatorlibe.SolidPadLayout>

    <ir.esfandune.calculatorlibe.SolidPadLayout
        android:id="@+id/pad_operator"
        style="@style/PadLayoutStyle.Operator"

        android:columnCount="1"
        android:rowCount="5">

        <Button
            android:id="@+id/op_div"
            style="@style/PadButtonStyle.FloatingCalc"
            android:contentDescription=""
            android:textColor="@color/calculator_button_color"
            android:text="@string/op_div" />

        <Button
            android:id="@+id/op_mul"
            style="@style/PadButtonStyle.FloatingCalc"
            android:contentDescription=""
            android:textColor="@color/calculator_button_color"
            android:text="@string/op_mul" />

        <Button
            android:id="@+id/op_sub"
            style="@style/PadButtonStyle.FloatingCalc"
            android:contentDescription=""
            android:textColor="@color/calculator_button_color"
            android:text="@string/op_sub" />

        <Button
            android:id="@+id/op_add"
            style="@style/PadButtonStyle.FloatingCalc"
            android:contentDescription=""
                android:textColor="@color/calculator_button_color"
            android:text="@string/op_add" />

        <ImageView
            android:id="@+id/done"
            style="@style/PadButtonStyle.FloatingCalc"
            android:layout_margin="5dp"
            android:background="@drawable/circle_red"
            android:padding="5dp"
            android:src="@drawable/ic_done_c"
            />
    </ir.esfandune.calculatorlibe.SolidPadLayout>

</LinearLayout>
