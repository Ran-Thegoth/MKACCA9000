<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tooltip_margin"
    android:orientation="vertical" >
    <ImageView android:layout_width="500dp" android:layout_height="500dp" android:scaleType="centerInside" android:id="@+id/l_qr" android:visibility="gone"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:id="@+id/l_hint" android:textStyle="bold"/>
    <ProgressBar style="@android:style/Widget.Holo.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="3dp" android:indeterminate="true"/>
</LinearLayout>
